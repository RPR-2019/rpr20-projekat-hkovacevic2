<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<GridPane minWidth="-Infinity" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
  <stylesheets>
    <URL value="@/css/user.css" />
  </stylesheets>
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="NEVER" />
      <RowConstraints vgrow="NEVER" />
    <RowConstraints vgrow="NEVER" />
  </rowConstraints>
   <children>
      <ButtonBar GridPane.rowIndex="5">
        <buttons>
          <Button fx:id="btnAdd" defaultButton="true" mnemonicParsing="false" onAction="#addAction" text="Add" />
            <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
        </buttons>
         <GridPane.margin>
            <Insets top="10.0" />
         </GridPane.margin>
      </ButtonBar>
      <VBox>
         <children>
            <Label text="Ime:" />
            <TextField fx:id="fldName" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="1">
         <children>
            <Label text="Prezime:" />
            <TextField fx:id="fldSurname" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="2">
         <children>
            <Label text="Broj telefona:" />
            <TextField fx:id="fldNumber" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="3">
         <children>
            <Label text="Username:" />
            <TextField fx:id="fldUsername" />
         </children>
      </VBox>
      <VBox GridPane.rowIndex="4">
         <children>
            <Label text="Password:" />
            <TextField fx:id="fldPw" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
